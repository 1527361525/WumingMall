<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wlyykf.mall.mappers.UserMapper">

    <select id="getUsersByIds" resultType="com.wlyykf.mall.vo.UserVO">
        SELECT
            user_id AS userId,
            nick_name AS nickName,
            email,
            phone,
            avatar,
            money
        FROM
            tb_user
        WHERE
            del_flag = 0
        <if test="userIdList != null and userIdList.size() > 0">
            AND user_id IN
            <foreach item="item" index="index" collection="userIdList" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
    </select>

    <select id="getUsersPageByIds" resultType="com.wlyykf.mall.vo.UserVO">
        SELECT
            user_id AS userId,
            nick_name AS nickName,
            email,
            phone,
            avatar,
            money
        FROM
            tb_user
        WHERE
            del_flag = 0
        <if test="userIdList != null and userIdList.size() > 0">
            AND user_id IN
            <foreach item="item" index="index" collection="userIdList" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
    </select>

</mapper>
